// Prisma schema for Supabase Postgres
// Run: npx prisma generate && npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Dealerships table
model Dealership {
  id        String   @id @default(uuid())
  name      String
  address   String
  city      String
  state     String
  zip       String
  timezone  String   @default("America/New_York")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  members           DealershipMember[]
  agents            Agent[]
  telephonyNumbers  TelephonyNumber[]
  integrations      Integration[]

  @@map("dealerships")
}

// Dealership members (users with roles)
model DealershipMember {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  dealershipId String   @map("dealership_id")
  role         String   @default("staff") // admin, staff
  createdAt    DateTime @default(now()) @map("created_at")

  dealership Dealership @relation(fields: [dealershipId], references: [id], onDelete: Cascade)

  @@unique([userId, dealershipId])
  @@map("dealership_members")
}

// Agents configuration (reception, service, sales)
model Agent {
  id                  String   @id @default(uuid())
  dealershipId        String   @map("dealership_id")
  type                String   // reception, service, sales
  vapiAgentId         String?  @map("vapi_agent_id")
  isEnabled           Boolean  @default(false) @map("is_enabled")
  transferEnabled     Boolean  @default(false) @map("transfer_enabled")
  transferPhoneNumber String?  @map("transfer_phone_number")
  toolCallsEnabled    Boolean  @default(false) @map("tool_calls_enabled")
  configJson          Json     @default("{}") @map("config_json")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  dealership Dealership @relation(fields: [dealershipId], references: [id], onDelete: Cascade)

  @@unique([dealershipId, type])
  @@map("agents")
}

// Phone numbers and SIP configuration
model TelephonyNumber {
  id                   String   @id @default(uuid())
  dealershipId         String   @map("dealership_id")
  phoneNumber          String   @map("phone_number")
  vapiPhoneId          String?  @map("vapi_phone_id")
  sipDomain            String?  @map("sip_domain")
  sipUsername          String?  @map("sip_username")
  sipPasswordEncrypted String?  @map("sip_password_encrypted")
  isPrimary            Boolean  @default(false) @map("is_primary")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  dealership Dealership @relation(fields: [dealershipId], references: [id], onDelete: Cascade)

  @@map("telephony_numbers")
}

// External integrations (CDK CRM, etc.)
model Integration {
  id           String   @id @default(uuid())
  dealershipId String   @map("dealership_id")
  provider     String   // cdk
  status       String   @default("disconnected") // connected, disconnected, error
  configJson   Json     @default("{}") @map("config_json")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  dealership Dealership @relation(fields: [dealershipId], references: [id], onDelete: Cascade)

  @@unique([dealershipId, provider])
  @@map("integrations")
}
